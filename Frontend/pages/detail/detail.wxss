.wholePage {
  width: 100%;
  overflow-x: hidden;
}

#transparentView {
  position: fixed;
  width: 100%;
  background-color:black;
  opacity: 0.5;
  height: 1500rpx;
  z-index: 90;
}

#shareBlock{
  width: 638rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgb(248, 247, 249);
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 770rpx;
  /* margin-top: 220rpx;
  margin-left: 70rpx; */
  margin: auto;
  z-index: 100;
  border-radius: 8rpx;
}

#rawText {
  margin-top: 58rpx;
  margin-bottom: 52rpx;
  font-size: 34rpx;
  line-height: 34rpx;
  color: #333333;
  text-align: center;
  font-weight: 500;
}

button.shareButton:nth-child(1) {
  font-size: 34rpx;
  line-height: 34rpx;
  color: #333333;
  text-align: center;
  font-weight: 500;
  padding: 38rpx 0;
  border-bottom-left-radius: 8rpx;
}

button.shareButton:nth-child(1)::after {
  border-top: 2rpx solid #E5E5E5;
  border-left: none;
  border-right: 2rpx solid #E5E5E5;
  border-bottom: none;
}

button.shareButton:nth-child(2) {
  font-size: 34rpx;
  line-height: 34rpx;
  color: #556893;
  text-align: center;
  font-weight: 500;
  padding: 38rpx 0;
  border-bottom-right-radius: 8rpx;
}

button.shareButton:nth-child(2)::after {
  border-top: 2rpx solid #E5E5E5;
  border-left: none;
  border-bottom: none;
  border-right: none;
}

.controlButton{
  display: flex;
  flex-direction: row;
  width: 100%;
  /* margin-top: 60rpx; */
  margin-top: auto;
  margin-bottom: 0;
}


.shareButton{
  width: 50%;
  margin-left: 0;
  margin-right: 0;
  border-radius: 0rpx;
  background-color: rgb(248, 247, 249);
}


.shareButton::after{
  border-radius: 0rpx;
  border-color: #E5E5E5;
}

.shareButtonHover {
  background-color: #EDEDED !important;
}
.shareButtonOnHover{
    color: #556893;
}

.title{
  font-size: 60rpx;
}

.promptText{
  font-size: 44rpx;
  line-height: 44rpx;
  font-weight: 600;
  margin-top: 32rpx;
  margin-left: 40rpx;
}

.infoView{
  margin-top: 30rpx;
}

.storyView{
  margin-top: 20rpx;
  height: auto;
  width: 670rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  margin-left: 40rpx;
  margin-bottom: 28rpx;
  color: #333333;
}

#imageView {
  margin-top: 28rpx;
  margin-left: 40rpx;
  margin-bottom: 30rpx;
}

#photo-0{
  margin-left: 0;
  height: 320rpx;
  width: 320rpx;
  border-radius: 32rpx;
}

#photo-1{
  margin-left: 30rpx;
  height: 320rpx;
  width: 320rpx;
  border-radius: 32rpx;
}

.leftView{
  margin-top: 20rpx;
  margin-left: 20rpx;
  overflow: auto;
}

.idView{
  margin-bottom: 28rpx;
  background: #D8D8D8;
  width: 104rpx;
  height: 41rpx;
  font-size: 26rpx;
  text-align: left;
  line-height: 26rpx;
  color: white;
  font-family: DinkieBitmap, -apple-system, BlinkMacSystemFont, Helvetica Neue, Roboto, Arial, PingFang SC, Hiragino Sans GB, Source Han Sans SC, Source Han Sans CN, Microsoft Yahei, Microsoft JhengHei, sans-serif;
  padding: 7.5rpx 0 7.5rpx 10rpx;
  box-sizing: border-box;
}

.overview.oneLineDisplay{
  justify-content: space-between;
  margin-bottom: 0;
}

.rightView.oneLineDisplay {
  margin-bottom: 0;
}

.nameView{
  font-size: 60rpx;
  line-height: 60rpx;
  font-weight: 600;
}

.introView{
  width: 480rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  color: #999999;
  margin-top: 14rpx;
  margin-left: 40rpx;
}

.numView{
  font-size: 75rpx;
  line-height: 75rpx;
  font-weight: 600;
  margin-top: 60rpx;
  width: auto;
  text-align: right;
}

.ticket{
  margin-top: 94rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  margin-left: 6rpx;
  font-weight: 500;
}

.interactiveView{
  align-items: center;
  justify-content: space-between;
  margin-top: 28rpx;
  margin-bottom: 28rpx;
}

.promptView{
  width: 120rpx;
  text-align: right;
}

.smallText.promptView {
  font-size: 22rpx;
  font-weight: 400;
  line-height: 30rpx;
  color: #999999;
}

.voteButton::after {
  border: none;
}

.voteButton{
  margin-left: 14rpx;
  margin-right: 20rpx;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  height: 58rpx;
  width: 126rpx;
  line-height: 58rpx;
  color: #2179C0;
  border-radius: 30rpx;
}

.themeColor.voteButton {
  background: #FFF3F2;
}

.voteButtonHover.themeColor.voteButton {
  background: #999191;
  color: #97362D;
}

button[disabled] {
    color: #FEBAB4 !important;
    background: #FFF6F5 !important;
}

#shareButton::after{
  border: none;
}

#shareButton{
  background: none;
  margin-left: 20rpx;
  padding: 10rpx 70rpx 10rpx 0;
  display: flex;
  transition: opacity 0.15s ease;
}

#shareImg{
  width: 40rpx;
  height: 40rpx;
}

.buttonOnHover{
  opacity: 0.2;
}

.noStyle{
  background-color: white;
  padding: 0;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
}

.noStyle::after{
  border: none;
}

.fullItem{
  /* padding-top: 5rpx;
